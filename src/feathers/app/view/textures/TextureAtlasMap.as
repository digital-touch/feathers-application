package feathers.app.view.textures {
import flash.utils.Dictionary;

import starling.textures.Texture;
import starling.textures.TextureAtlas;

public class TextureAtlasMap implements ITextureAtlasMap {
	
	//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
	
    public var atlases:Dictionary = new Dictionary();

	//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
	
    public function addAtlas(id:String, textureAtlas:TextureAtlas):void {
        atlases[id] = textureAtlas;
    }

	//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
	
    public function removeAtlas(id:String):void {
        delete atlases[id];
    }

	//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
	
    public function getAtlas(id:String):TextureAtlas {
        return atlases[id];
    }

	//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
	
    public function getTexture(atlasId:String, name:String):Texture {
        var atlas:TextureAtlas = getAtlas(atlasId);
        return atlas.getTexture(name);
    }

	//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
	
    public function getTextures(atlasId:String, prefix:String = "", result:Vector.<Texture> = null):Vector.<Texture> {
        var atlas:TextureAtlas = getAtlas(atlasId);
        return atlas.getTextures(prefix, result);
    }

	//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
	
    public function getNames(atlasId:String, prefix:String = "", result:Vector.<String> = null):Vector.<String> {
        var atlas:TextureAtlas = getAtlas(atlasId);
        return atlas.getNames(prefix, result);
    }
	
	//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
}
}